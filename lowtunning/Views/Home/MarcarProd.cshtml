
@model lowtunning.Models.Produtosm
<h1>New Product</h1>
<hr />


@using (Html.BeginForm("MarcarProd", "Home", FormMethod.Post))
{



    @Html.HiddenFor(m => m.prodvenda)

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.nome_prod, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.nome_prod,
                                   new { @class = "form-control", @placeholder = "Nome do produto" })
                @Html.ValidationMessageFor(m => m.nome_prod, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.marca_prod, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.marca_prod,
                                   new { @class = "form-control", @placeholder = "Descrição do produto" })
                @Html.ValidationMessageFor(m => m.marca_prod, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.valor_prod, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.valor_prod,
                                   new { @class = "form-control", @placeholder = "Preço do produto" })
                @Html.ValidationMessageFor(m => m.valor_prod, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.data, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.data,
                                   new { @class = "form-control", @placeholder = "Preço do produto" })
                @Html.ValidationMessageFor(m => m.data, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar Produto" class="btn btn-success" />


            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}







