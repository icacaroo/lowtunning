
@model lowtunning.Models.Usuarios
@{
    ViewBag.Title = "EditFuncionario";
}
<h1>Editar Produto</h1>
<hr />
@using (Html.BeginForm("EditFuncionario", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Nome Funcionário", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.usuario,
                                   new { @class = "form-control", @placeholder = "Nome do produto" })
                @Html.ValidationMessageFor(m => m.usuario, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("CPF", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.cpf,
                                   new { @class = "form-control", @placeholder = "Descrição do produto" })
                @Html.ValidationMessageFor(m => m.cpf, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Endereço", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.endereço,
                                   new { @class = "form-control", @placeholder = "Preço do produto" })
                @Html.ValidationMessageFor(m => m.endereço, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Email", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.email,
                                   new { @class = "form-control", @placeholder = "Preço do produto" })
                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Telefone", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.telefone,
                                   new { @class = "form-control", @placeholder = "Preço do produto" })
                @Html.ValidationMessageFor(m => m.telefone, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar Produto" class="btn btn-success" />

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




























