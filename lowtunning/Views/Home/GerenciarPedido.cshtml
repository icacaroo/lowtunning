@model IEnumerable<lowtunning.Models.Produtosm>
@{
    ViewBag.Title = "GerenciarPedido";
}

<h2>Pedidos</h2>

@using (Html.BeginForm("GerenciarPedido", "Home", FormMethod.Post))
{

    <br />
    <table class="table">


        <tr>
            <th>
                @Html.DisplayName("Quantidade de Produto")
            </th>
            <th>
                @Html.DisplayName("Nome Comprador")
            </th>
            <th>
                @Html.DisplayName("Valor da Compra")
            </th>
            
        </tr>

        @foreach (var produto in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => produto.qtd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => produto.usuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => produto.valor_prod)
        </td>



        <td>


            @Html.ActionLink("Ver Compra", "ProdutoPedido", new { id = produto.cd_venda }, new { @class = "btn btn-sucess" })


        </td>

    </tr>
        }

    </table>
}

