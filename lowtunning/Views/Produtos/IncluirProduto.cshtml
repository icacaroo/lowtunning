@model lowtunning.Models.Produtosm


@using (Html.BeginForm("IncluirProduto", "Produtos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    ViewBag.Title = "IncluirProduto";

    <fieldset>
        <h2>Incluir Produto</h2>


        <div class="form-group">
            <div class=" input-group">
                <span class="input-group-addon"><i style="font-size:20px;" class="fas fa-envelope"></i></span>

                @Html.EditorFor(x => x.nome_prod, new
           {
               HtmlAttributes = new
               {
                   id = "txtNome",
                   type = "text",
                   @class = "form-control",
                   placeholder = "Digite a descricao do produto",
                   required = "insira a descricao",
                   maxlength = "40"
               }

           })
                @Html.ValidationMessageFor(x => x.nome_prod, "", new { @class = "text-danger" })

            </div>
        </div>


        <div class="form-group">
            <div class=" input-group">
                <span class="input-group-addon"><i style="font-size:20px;" class="fas fa-envelope"></i></span>

                @Html.EditorFor(x => x.marca_prod, new
           {
               HtmlAttributes = new
               {
                   id = "txtmarca",
                   type = "text",
                   @class = "form-control",
                   placeholder = "Digite a marca",
                   required = "insira a marca",
                   maxlength = "40"
               }

           })
                @Html.ValidationMessageFor(x => x.marca_prod, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class=" input-group">
                <span class="input-group-addon"><i style="font-size:20px;" class="fas fa-envelope"></i></span>

                @Html.EditorFor(x => x.valor_prod, new
           {
               HtmlAttributes = new
               {
                   id = "txtvalor",
                   type = "text",
                   @class = "form-control",
                   placeholder = "Digite o valor do produto",
                   required = "insira o valor do produto",
                   maxlength = "40"
               }

           })
                @Html.ValidationMessageFor(x => x.valor_prod, "", new { @class = "text-danger" })

            </div>
        </div>


  
        <div class="form-group">
            <div class=" input-group">
                <span class="input-group-addon"><i style="font-size:20px;" class="fas fa-envelope"></i></span>
                @Html.TextBoxFor(m => m.caminhoimagem, new { type = "file", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.caminhoimagem, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <div class=" input-group">
                <span class="input-group-addon"><i style="font-size:20px;" class="fas fa-envelope"></i></span>
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "Suspensão",
                        Value = "Suspensao"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Som",
                        Value = "Som",

                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Envelopamento",
                        Value = "Envelopamento"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "Tunagem",
                        Value = "Tunagem",

                    });

                    listItems.Add(new SelectListItem
                    {
                        Text = "Rodas",
                        Value = "Rodas",

                    });

                }

                @Html.DropDownListFor(model => model.idtipo, listItems, "Tipo de Produto", new { htmlAttributes = new { @class = "form-control", } })
            </div>
        </div>


        <br />

        <input type="submit" class="button buttoan-a button-big button- rouded" value="Adicionar Produto" name="Incluir" /><br />



        <br />


    </fieldset>




}