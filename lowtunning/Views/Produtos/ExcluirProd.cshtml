@model lowtunning.Models.Produtosm
@{
    ViewBag.Title = "ExcluirProduto";
}
<h2>Deletar Produto</h2>
<h3 class="text-danger">Deseja deletar este produto ?</h3>
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.nome_prod, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.nome_prod,
                                      new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.marca_prod, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.marca_prod,
                                      new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.valor_prod, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.valor_prod,
                          new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Deletar Produto" class="btn btn-danger" />
            <br />
            @Html.ActionLink("Cancelar", "Produtos", "Produtos", new { @class = "btn btn-warning" })
        </div>
    </div>
}
