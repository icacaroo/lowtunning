@model lowtunning.Models.Usuarios


@using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
{
    ViewBag.Title = "Login";

    <fieldset>
        <br />
        <h2>Login</h2>
        <br />
        <div class="form-group">
            <div class=" input-group">
                <span class="input-group-addon"><i style="font-size:20px;" class="fas fa-envelope"></i></span>

                @Html.EditorFor(x => x.usuario, new
           {
               HtmlAttributes = new
                    {
                        id = "txtNome",
                        senha = "txtSenha",
                        type = "text",
                        @class = "form-control",
                   placeholder = "Digite seu Nome",
                        required = "insira o nome",
                        maxlength = "30"
                    }

           })
                @Html.ValidationMessageFor(x => x.usuario, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class=" input-group">
                <span class="input-group-addon"><i style="font-size:20px;" class="fas fa-envelope"></i></span>

                @Html.EditorFor(x => x.Senha, new
           {
               HtmlAttributes = new
                    {
                        id = "txtSenha",
                        senha = "txtSenha",
                        type = "password",
                        @class = "form-control",
                   placeholder = "Digite sua Senha",
                        required = "insira a senha",
                        maxlength = "30"
                    }

           })
                @Html.ValidationMessageFor(x => x.Senha, "", new { @class = "text-danger" })

            </div>
        </div>


        <input type="submit" class="button buttoan-a button-big button- rouded" value="Entrar" /><br />
        <br />
        
        <input type="submit" class="button buttoan-a button-big button- rouded" value="Sair" /><br />


        <br />

        <div class="form-group small clearfix">
            Não tem uma conta?
            @Html.ActionLink("Cadastre-Se!", "IncluirUsuario", "Home", new { @class = "btn btn-sucess" })

        </div>



    </fieldset>



}